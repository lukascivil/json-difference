{
  "name": "@monorepo/json-difference",
  "version": "1.4.0",
  "author": "lukascivil",
  "homepage": "https://github.com/lukascivil/json-difference#readme",
  "description": "json difference lib",
  "license": "MIT",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.17.x"
  },
  "files": [
    "dist",
    "dist.browser"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukascivil/json-difference.git"
  },
  "keywords": [
    "json",
    "diff"
  ],
  "scripts": {
    "lint": "eslint --ext .ts",
    "check-types": "tsc --noemit -p tsconfig.json",
    "test": "jest --config jestconfig.json --coverage",
    "test:local": "jest --watchAll --config jestconfig.json",
    "build": "tsc && vite build",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test",
    "example": "echo Use {simple} or {stress} as example param && cd ./apps/examples && yarn",
    "start-playground": "yarn --cwd apps/playground dev",
    "build-playground": "yarn --cwd apps/playground build",
    "release": "npx semantic-release --extends=./.release.config.js",
    "update-deps": "PACKAGE_NAME=$PACKAGE_NAME VERSION=$VERSION yarn run update-depss",
    "update-depss": "npx rjp ./package.json $PACKAGE_NAME $VERSION",
    "bump-version": "rjp package.json version $VERSION"
  }
}
